c=8
ao=0 --angle offset

function _init()
	
end

function _update()
	ao+=.001
	
	if btn(⬆️) then
		ao+=.001
	end
end

function _draw()
	cls(0)
	
--	camera(-64,-64)
	for i=1,500 do
		local a=(i+ao)*1.618
		local r=c*i--c*sqrt(i)
		local x=cos(a)*r
		local y=sin(a)*r
		if mid(0,x,128)==x and
			mid(0,y,128)==y then
				pset(x,y,6)		
		end
	end
	camera()
	print(stat(1))
end
